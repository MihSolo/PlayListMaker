<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LibraryActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_universal"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/layout_width_Lib_Srch_LL"
                android:layout_height="match_parent"
                android:layout_gravity="top">

                <Button
                    android:id="@+id/backToMain"
                    android:layout_width="@dimen/layout_width_Lib_Srch_Button"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:backgroundTint="@color/white"
                    android:contentDescription="null"
                    app:icon="@drawable/arrow"
                    app:iconGravity="textStart"
                    app:iconTint="@color/icon_color" />

                <TextView
                    android:layout_width="208dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:fontFamily="@font/ys_display_medium"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/paddingLeft_Lib_Srch"
                    android:text="@string/library"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_universal_bookmark_titel" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>