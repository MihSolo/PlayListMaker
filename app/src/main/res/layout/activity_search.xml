<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorOnSecondary"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="75dp">

        <LinearLayout style="@style/LinearLayoutViewOnAppDesktopTop">

            <Button
                android:id="@+id/backToMain"
                style="@style/ButtonBackToMain" />

            <TextView
                style="@style/TextViewTitelNearBackArrow"
                android:text="@string/search" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SearchField"
            style="@style/LinearLayoutSerchScreen">

            <LinearLayout
                android:id="@+id/LLGroup"
                style="@style/LinearLayoutGroupBorder">

            <ImageView
                android:id="@+id/searchButton"
                style="@style/ImageViewSerchScreen"/>

            <EditText
                android:id="@+id/inputEditText"
                style="@style/EditText_SerchScreen"
                android:inputType="text"/>

            <ImageView
                android:id="@+id/clearButton"
                style="@style/ImageViewSerchScreenReset" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>