<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    style="@style/CardViewBasement_cardView"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    app:cardElevation="0dp"
    >

    <ImageView
        android:id="@+id/trackCover"
        style="@style/CardViewImageView_trackCover" />

    <TextView
        android:id="@+id/track_name_view"
        style="@style/CardViewTextView_artistNameView" />

    <LinearLayout
        android:id="@+id/frameLayout_border"
        style="@style/CardViewFrameLayout_frameLayout_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artist_name_view">

        <TextView
            android:id="@+id/artist_name_view"
            style="@style/CardViewTextView_trackNameView" />

        <TextView
            android:id="@+id/dot"
            style="@style/CardView_ImageView_dot"
            android:background="@drawable/dot" />

        <TextView
            android:id="@+id/trackTimeView"
            style="@style/CardView_TextView_trackTimeView" />
    </LinearLayout>

    <TextView
        android:id="@+id/cardView_ButtonArrow"
        style="@style/CardView_textView_SettingsButtonViewArrow" />

</androidx.cardview.widget.CardView>


