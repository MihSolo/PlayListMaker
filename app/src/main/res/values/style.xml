<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_main</item>
        <item name="android:layout_marginHorizontal">@dimen/mergin_16dp</item>
        <item name="android:layout_weight">@dimen/layout_weight</item>
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="cornerRadius">@dimen/corner_radius_main_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="ButtonBackToMain">
        <item name="android:layout_gravity">start</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:contentDescription">null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="icon">@drawable/arrow</item>
    </style>

    <style name="FrameLayoutSettings">
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingLeft">@dimen/padding_16dp</item>
    </style>

    <style name="LinearLayoutBasicForAllDesctop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutViewOnAppDesktopTop">
        <item name="android:layout_gravity">top</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextViewTitelNearBackArrow">
        <item name="android:textSize">@dimen/textSize_universal_bookmark_titel</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:minHeight">@dimen/minHeight_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingLeft">@dimen/paddingLeft_Lib_Srch</item>
    </style>

    <style name="TextViewSettingsMenyForAll">
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/minHeight_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_16sp_set_act</item>

    </style>

    <style name="SettingsButtonViewSupport">
        <item name="android:layout_gravity">end</item>
        <item name="android:scaleType">center</item>
        <item name="drawableEndCompat">@drawable/support</item>

    </style>

    <style name="SettingsButtonViewShareMode">
        <item name="android:layout_gravity">end</item>
        <item name="android:scaleType">center</item>
        <item name="drawableEndCompat">@drawable/share</item>

    </style>

    <style name="SettingsButtonViewArrow">
        <item name="android:layout_gravity">end</item>
        <item name="android:scaleType">center</item>
        <item name="drawableEndCompat">@drawable/arrow_forward</item>
    </style>

    <style name="Switch_NightMode">
        <item name="android:layout_gravity">end</item>
        <item name="android:scaleType">center</item>
    </style>

